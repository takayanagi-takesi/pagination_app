<table>
<h1>投稿一覧</h1>
<%= form_with model: @post, local: true do |form|%>
  <div>
    <%= form.label :body, "タイトル"%>
    <%= form.body_field :body %>
  </div>
  <div>
    <%= form.submit "送信"%>
  </div>
<% end %>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @posts %>